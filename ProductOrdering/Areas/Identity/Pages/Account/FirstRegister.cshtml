<div class="limiter">
    <div class="container-login100">
        <div class="wrap-login100 p-l-55 p-r-55 p-t-65 p-b-50">
            <form asp-route-returnUrl="@Model.ReturnUrl" method="post" class="login100-form validate-form">
                <span class="login100-form-title p-b-33">
                    ลงทะเบียน
                </span>
                <div class="form-group">
                    <span>อีเมล</span>
                    <div class="wrap-input100 validate-input" data-validate="Valid email is required: ex@abc.xyz">
                        <input asp-for="Input.Email" class="input100" type="text" placeholder="Email">
                        <span class="focus-input100-1"></span>
                        <span class="focus-input100-2"></span>
                    </div>
                </div>
                <div class="form-group">
                    <span>รหัสผ่าน</span>
                    <div class="wrap-input100 validate-input" data-validate="Password is required">
                        <input asp-for="Input.Password" class="input100" type="password" placeholder="Password">
                        <span class="focus-input100-1"></span>
                        <span class="focus-input100-2"></span>
                    </div>
                </div>
                <div class="form-group">
                    <span style="font-family: OpenSans-Regular;">ยืนยันรหัสผ่าน</span>
                    <div class="wrap-input100 validate-input" data-validate="Password is required">
                        <input asp-for="Input.ConfirmPassword" class="input100" type="password" placeholder="Password">
                        <span class="focus-input100-1"></span>
                        <span class="focus-input100-2"></span>
                    </div>
                </div>
                <div class="container-login100-form-btn m-t-20">
                    <button type="submit" class="login100-form-btn" style="background-color: orange;">
                        ลงทะเบียน
                    </button>
                </div>

                <div class="text-center p-t-45 p-b-4">
                    <span class="txt1">
                        มีบัญชีอยุ่แล้ว ?
                    </span>

                    <a asp-page="./Login" asp-route-returnUrl="@Model.ReturnUrl" class="txt2 hov1">
                        เข้าสู่ระบบ
                    </a>
                </div>
            </form>
        </div>
    </div>
</div>



